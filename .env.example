# ─────────────────────────────────────────────────────────────────────────────
# SmartParkTN  –  Environment Variables
# Copy this file to .env and fill in your values
# ─────────────────────────────────────────────────────────────────────────────

# Groq Cloud API key  →  https://console.groq.com/keys  (free tier, no credit card)
GROQ_API_KEY=gsk_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# LLM model on Groq (free & fast)
GROQ_MODEL=llama-3.1-8b-instant

# Database
DATABASE_URL=sqlite:///./smartpark.db

# Vector store directory
CHROMA_DB_DIR=./data/chroma_db

# Rules documents directory (for RAG ingestion)
RULES_DIR=./data/rules

# YOLO model weights path (auto-downloaded on first run if not present)
YOLO_WEIGHTS=./models/plate_detector.pt

# PaddleOCR / PaddleX – disable connectivity check
PADDLE_PDX_DISABLE_MODEL_SOURCE_CHECK=True

# Camera / video source  (0 = webcam, or path to .mp4)
VIDEO_SOURCE=0

# Confidence thresholds
PLATE_DETECT_CONF=0.45
OCR_CONF_THRESHOLD=0.75

# Parking tariff defaults (TND / hour)
TARIFF_VISITOR=2.0
TARIFF_SUBSCRIBER=0.0
TARIFF_VIP=0.0
FREE_MINUTES=15
MAX_DAILY_TND=20.0

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit
STREAMLIT_PORT=8501
